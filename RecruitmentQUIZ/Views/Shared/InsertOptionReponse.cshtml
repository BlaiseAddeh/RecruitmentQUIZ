@model RecruitmentQUIZ.Models.OptionReponse

@using (Html.BeginForm("Insert", "OptionReponse", FormMethod.Post))
{
	<table class="table table-condensed">
		<tr style="visibility:hidden">
			<td> Question ID :</td>
			<td>@Html.TextBoxFor(m => m.QuestionID, new {@Value =  Session["questionid"].ToString(), @readonly = "readonly" })  </td>
		</tr>
		
		<tr>
			<td> Libellé :</td>
			<td>@Html.TextBoxFor(m => m.Libelle, htmlAttributes: new { @class = "form-control" })  </td>
		</tr>		
		<tr>
			<td colspan="2">
				<input type="submit" value="Save" formaction="/OptionReponse/insert" class="btn btn-success" />
				<input type="submit" value="Cancel" formaction="/OptionReponse/index/@Session["questionid"].ToString()" class="btn btn-default" />
			</td>
		</tr>
	</table>
}